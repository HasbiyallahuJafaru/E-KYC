# Database Configuration (SQLite for local dev)
DATABASE_URL=sqlite:///./ekyc.db

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Security
JWT_SECRET=your-secret-key-min-32-characters-long-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRY_HOURS=24

# Verification Provider
VERIFICATION_PROVIDER=mock
VERIFYME_BASE_URL=https://api.verifyme.ng/v1
VERIFYME_TEST_SECRET=test_secret_key_from_dashboard
VERIFYME_LIVE_SECRET=live_secret_key_from_dashboard
USE_TEST_KEYS=true

# Provider Configuration
PROVIDER_TIMEOUT_SECONDS=10
PROVIDER_MAX_RETRIES=3
PROVIDER_CIRCUIT_BREAKER_THRESHOLD=5
PROVIDER_CIRCUIT_BREAKER_TIMEOUT=60

# API Configuration
API_RATE_LIMIT_PER_MINUTE=100
API_REQUEST_TIMEOUT_SECONDS=25
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:5174,http://localhost:5175

# Application
ENVIRONMENT=development
LOG_LEVEL=INFO
DEBUG=false

# Storage
REPORTS_STORAGE_PATH=./storage/reports
REPORTS_RETENTION_DAYS=30
